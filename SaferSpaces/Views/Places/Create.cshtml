@{
  Layout = "_Layout";  TEMPLATE
}

@model ToDoList.Models.Item

<h4>Add a new task</h4>

@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name)

    @Html.LabelFor(model => model.Type)
    @Html.TextBoxFor(model => model.Type)

    @Html.LabelFor(model => model.Address)
    @Html.TextBoxFor(model => model.Address)

    @Html.LabelFor(model => model.RestroomFeatures)
    @Html.TextBoxFor(model => model.RestroomFeatures)

    
    <input type="submit" value="Add new item" class="btn btn-default" />
}
<p>@Html.ActionLink("Show all items", "Index")</p>

    
    
    
    

